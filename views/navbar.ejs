<header class="site-header">
  <nav class="nav">
    <a href="/home" class="brand">
      <span class="brand-logo">â—Ž</span>
      <span class="brand-text">ExTodo</span>
    </a>

    <ul class="links">
      <li><a href="/home" class="link">Home</a></li>
      <li><a href="#" class="link">Features</a></li>
      <li><a href="#" class="link">About</a></li>
    </ul>

    <div class="actions">
      <% if (username && username !== "guest") { %>
      <div class="user">
        <span class="avatar"><%= username.trim()[0].toUpperCase() %></span>
        <span class="user-name"><%= username %></span>
      </div>
      <a href="/auth/logout" class="btn ghost">Logout</a>
      <% } else { %>
      <a href="/auth/login" class="btn ghost">Login</a>
      <a href="/auth/signup" class="btn solid">Sign Up</a>
      <% } %>
    </div>
  </nav>
</header>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap");

  :root {
    --brand-dark: #2c3e50;
    --brand-light: #34495e;
    --accent-color: #e74c3c;
    --text-color: #ecf0f1;
    --background-color: #f5f7fa;
    --white: #ffffff;
  }

  body {
    padding-top: 70px;
    font-family: "Poppins", sans-serif;
  }

  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: var(--brand-dark);
    color: var(--text-color);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    z-index: 999;
  }

  .nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
  }

  .links {
    list-style: none;
    display: flex;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  .link {
    text-decoration: none;
    font-weight: 500;
    color: var(--text-color);
    position: relative;
    transition: all 0.3s ease;
  }

  .link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -5px;
    width: 0;
    height: 2px;
    background-color: var(--accent-color);
    transition: width 0.3s ease;
  }

  .link:hover::after {
    width: 100%;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 700;
    text-decoration: none;
    color: var(--text-color);
    font-size: 1.5rem;
  }

  .brand-logo {
    width: 32px;
    height: 32px;
    display: grid;
    place-items: center;
    border-radius: 8px;
    background: var(--accent-color);
    color: var(--white);
    font-weight: 700;
  }

  .actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .btn {
    text-decoration: none;
    font-weight: 600;
    padding: 0.6rem 1.2rem;
    border-radius: 50px;
    border: 1px solid transparent;
    transition: all 0.3s ease;
    cursor: pointer;
    text-align: center;
  }

  .btn.solid {
    background: var(--accent-color);
    color: var(--white);
    border-color: var(--accent-color);
  }

  .btn.solid:hover {
    background: var(--white);
    color: var(--accent-color);
  }

  .btn.ghost {
    background: transparent;
    color: var(--text-color);
    border: 1px solid rgba(255, 255, 255, 0.4);
  }

  .btn.ghost:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.8);
  }

  .user {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: grid;
    place-items: center;
    background: #595856;
    color: var(--white);
    font-weight: 700;
    border: 2px solid var(--accent-color);
  }

  @media (max-width: 768px) {
    .nav {
      flex-direction: column;
      gap: 1rem;
    }

    .links {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }

    .actions {
      flex-direction: column;
      gap: 0.5rem;
      width: 100%;
    }

    .btn {
      width: 100%;
    }
  }
</style>