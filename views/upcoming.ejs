<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>ðŸŒ¿ ExTodo â€” Upcoming</title>

  <style>
    :root{
      --brand-dark:#2c3e50;
      --bg:#f9f9f9;
      --card:#fff;
      --text:#333;
      --muted:#888;
      --shadow-md: 0 4px 8px rgba(0,0,0,0.06);
      --shadow-lg: 0 8px 20px rgba(0,0,0,0.09);
    }
    *{box-sizing:border-box;margin:0;padding:0;font-family: "Poppins", system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;}
    body{ background:var(--bg); color:var(--text); display:flex; flex-direction:column; min-height:100vh; }

    .layout{ display:flex; flex:1; min-height: calc(100vh - 60px); }
    .sidebar{ width:240px; border-right:1px solid #eee; padding:1rem; }
    .content{ flex:1; padding:24px 32px; overflow:auto; }

    .page-title{ display:flex; align-items:center; gap:12px; margin-bottom:18px; }
    .page-title h1{ font-size:28px; color:var(--brand-dark); font-weight:700; }

    .todo-list-container{ max-width:880px; margin:0 auto; display:flex; flex-direction:column; gap:14px; }

    /* Group by date block */
    .day-block{
      display:flex;
      flex-direction:column;
      gap:10px;
    }
    .day-header{
      font-weight:700;
      color:var(--brand-dark);
      font-size:1rem;
      margin:8px 0;
    }

    .todo-card{
      background:var(--card);
      padding:12px 14px;
      border-radius:10px;
      box-shadow:var(--shadow-md);
      border:1px solid rgba(0,0,0,0.03);
      display:flex;
      justify-content:space-between;
      align-items:center;
      gap:12px;
    }

    .todo-text{ font-weight:600; color:var(--brand-dark); }
    .todo-meta{ color:var(--muted); font-size:0.9rem; }

    .done-btn{ background:#2ecc71;color:#fff;border:none;padding:8px 10px;border-radius:8px;cursor:pointer;font-weight:700; }
    .done-btn:hover{ background:#27ae60; }

    .empty-message{ text-align:center; padding:40px 0; color:var(--muted); }

    @media (max-width:900px){
      .sidebar{ display:none; }
      .content{ padding:16px; }
    }
  </style>
</head>
<body>

  <%- include("navbar", { username }) %>

  <div class="layout">
    <% if (username !== "guest") { %>
      <div class="sidebar"><%- include("sidebar") %></div>
    <% } %>

    <main class="content">
      <div class="page-title">
        <h1>ðŸ“† Upcoming (Next 7 Days)</h1>
      </div>

      <div class="todo-list-container">
        <% if (!tasks || tasks.length === 0) { %>
          <div class="empty-message">No upcoming tasks â€” relax âœ…</div>
        <% } else { %>
          <!-- group tasks by date for clarity -->
          <% 
            // Build a date => tasks map
            const groups = {};
            tasks.forEach(t => {
              const key = t.deadline ? (new Date(t.deadline)).toISOString().split('T')[0] : 'no-date';
              if (!groups[key]) groups[key] = [];
              groups[key].push(t);
            });

            // Sort keys (dates ascending), keep 'no-date' at the end
            const keys = Object.keys(groups).sort((a,b)=>{
              if (a === 'no-date') return 1;
              if (b === 'no-date') return -1;
              return new Date(a) - new Date(b);
            });
          %>

          <% keys.forEach(dayKey => { %>
            <div class="day-block">
              <div class="day-header">
                <% if (dayKey === 'no-date') { %>
                  No date
                <% } else { %>
                  <%= new Date(dayKey).toLocaleDateString(undefined, { weekday: 'long', month: 'short', day: 'numeric' }) %>
                <% } %>
              </div>

              <% groups[dayKey].forEach(todo => { %>
                <div class="todo-card">
                  <div>
                    <div class="todo-text"><%= todo.text %></div>
                    <div class="todo-meta">
                      <% if (todo.category) { %><span><%= todo.category %></span> &nbsp; <% } %>
                      <% if (todo.deadline) { %><span>Due: <%= new Date(todo.deadline).toLocaleDateString() %></span><% } %>
                    </div>
                  </div>

                  <div>
                    <form action="/home/toggle" method="POST" style="display:inline;">
                      <input type="hidden" name="username" value="<%= username %>">
                      <input type="hidden" name="taskId" value="<%= todo.id %>">
                      <button type="submit" class="done-btn">âœ”</button>
                    </form>
                  </div>
                </div>
              <% }) %>
            </div>
          <% }) %>
        <% } %>
      </div>
    </main>
  </div>

  <%- include("footer") %>
</body>
</html>
